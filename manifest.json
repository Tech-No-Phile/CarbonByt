{
    "manifest_version": 3,
    "name": "CarbonByt",
    "version": "1.0",
    "description": "Estimate carbon footprint of websites you visit.",
    "permissions": [
        "tabs",
        "scripting",
        "webRequest",
        "activeTab",
        "storage",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}